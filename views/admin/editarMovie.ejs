<%- include('templates/adminNav.ejs') %>

<main>
    <h1>EDITAR PELÍCULA</h1>
    <form action="../admin/editarMovie/editada" method="post" enctype="multipart/form-data">
        <p>Editar una película nueva</p>
        <label for="titulo">Título:</label>
        <input type="text" placeholder="título" name="titulo">
        <label for="image">Imagen:</label>
        <input type="file" placeholder="Imagen:" name="uploaded_file">
        <label for="genero">Género:</label>
        <input type="text" placeholder="género" name="genero">
        <label for="anio">Año:</label>
        <input type="text" placeholder="año" name="anio">
        <label for="director">Director:</label>
        <input type="text" placeholder="director" name="director">
        <label for="duracion">Duración:</label>
        <input type="text" placeholder="duración" name="director">
        <button type="submit" id="editaPeli" class="btn">Editar película</button>
    </form>
</main>
